{
    "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "src/**",
            "docs/**/*.md",
            "docs/.vitepress/theme/**",
            "!docs/.vitepress/theme/aksel",
            "docs/.vitepress/config.ts",
            "package.json",
            "biome.json",
            "vitest.config.mts",
            "tsup.config.mts",
            "tsconfig.json",
            "README.md",
            ".github/**"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 120,
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            [":NODE:", ":PACKAGE:"],
                            ":BLANK_LINE:",
                            ":ALIAS:",
                            ":BLANK_LINE:",
                            "../**",
                            ":BLANK_LINE:",
                            "./**",
                            ":BLANK_LINE:",
                            "./index"
                        ]
                    }
                }
            }
        }
    }
}

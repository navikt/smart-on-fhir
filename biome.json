{
    "$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
    "extends": ["@navikt/tsm-biome"],
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "src/**",
            "docs/**/*.md",
            "docs/.vitepress/theme/**",
            "!docs/.vitepress/theme/aksel",
            "docs/.vitepress/config.ts",
            "package.json",
            "biome.json",
            "vitest.config.mts",
            "tsup.config.mts",
            "tsconfig.json",
            "README.md",
            ".github/**"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    }
}
